{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["./src/*"]
		}
	},
	"include": ["src", "./config/jest/setupTests.ts"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
